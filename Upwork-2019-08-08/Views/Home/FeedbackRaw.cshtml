@model List<Upwork_2019_08_08.Models.Feedback>
@{
    Layout = null;
}

<h2>
    Feedbacks <span>
        <button type="button"
                class="btn txttype" data-toggle="modal" data-target="#exampleModalCenter">
            <i style="color:#1c536b" class="fas fa-plus-square"> </i> Feedback
        </button>
    </span>
</h2>
<table class="table table-bordered  ">
    <thead class="tablecolor">
        <tr>
            <th scope="col">#</th>
            <th scope="col">Name</th>
            <th scope="col">E-mail</th>
            <th scope="col">Subject</th>
            <th scope="col">Date</th>
            <th scope="col">Action</th>
        </tr>
    </thead>
    <tbody class="bckwhite">
        @{ int index = 0;}
        @foreach (var item in Model)
        {
            index++;
        <tr>
            <th scope="row">@index.ToString()</th>
            <td>@item.name</td>
            <td>@item.email</td>
            <td>@item.subject</td>
            <td>@item.datetime.ToString("MMMM dd yyyy hh:mm")</td>
            <td><a href="#Show" onclick="getMessage(@item.id)" data-target="#exampleModalCentermessage" data-toggle="modal">Show Message </a></td>
        </tr>
        }



    </tbody>
</table>
