@model List<Upwork_2019_08_08.Models.Feedback>
@{
    Layout = null;
}

<h2>
    Feedbacks <span>
    <!--  <button type="button"
              class="btn " data-toggle="modal" data-target="#exampleModalCenter">
          +Add Feedback
      </button>-->
</span>
</h2>
<table class="table table-bordered responsive" style="width: 100%">
    <thead class="tablecolor">
        <tr>
            <th scope="col">#</th>
            <th scope="col">Name</th>
            <th scope="col">E-mail</th>
            <th scope="col">Subject</th>
            <th scope="col">Cell Number</th>
            <th scope="col">Date</th>
            <th scope="col">Action</th>
        </tr>
    </thead>
    <tbody class="bckwhite">
        @{ int index = 0;}
        @foreach (var item in Model)
        {
            index++;
            <tr>
                <th scope="row">@index.ToString()</th>
                <td>@item.name</td>
                <td>@item.email</td>
                <td>@item.subject</td>
                <td>@item.cellPhone</td>
                <td>@item.datetime.ToString("MMMM dd yyyy hh:mm")</td>
                <td class="aPadding text-center"><a href="#Show" onclick="getMessage(@item.id)" data-target="#exampleModalCenter" class="maincolor" data-toggle="modal" title="Message"><i class="fas fa-eye "></i>  </a>| <a title="Delete" href="#Delete" class="maincolor" onclick="deleteMessage(@item.id)">  <i class="fas fa-trash-alt"></i></a></td>
            </tr>
        }



    </tbody>
</table>
