@model Upwork_2019_08_08.Models.Company

@{
    ViewData["Title"] = "ViewClient";
    Layout = "~/Areas/adminpanel/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid viewback">
    <h2 style="color:#1c536b">Client #@Model.id</h2> <br />
    <div class="row">

        <div class="col-6">
            <h3 style="color:#1c536b">Company Name: </h3>
            <input type="text" class="form-control" disabled value="@Model.name" /> <br />
        </div>
        <div class="col-6">
            <h3 style="color:#1c536b">Address:</h3>
            <input type="text" class="form-control" disabled value="@Model.address" /> <br />
        </div>
            <div class="col-6">
            <h3 style="color:#1c536b">Contact Person Name:</h3>
            <input type="text" class="form-control" disabled value="@Model.contactperson" /> <br />
        </div>
        <div class="col-6">
            <h3 style="color:#1c536b">Email:</h3>
            <input type="text" class="form-control" disabled value="@Model.email" /> <br />
        </div>
        <div class="col-6">
            <h3 style="color:#1c536b">Created Date:</h3>
            <input type="text" class="form-control" disabled value="@Model.createdDate" /> <br />
        </div>
        <div class="col-6">
            <h3 style="color:#1c536b">Active/Inactive:</h3>
            <input type="text" class="form-control" disabled value="@(Model.isActive==true?"Active":"Inactive")" /> <br />
        </div>

    </div>
</div>
